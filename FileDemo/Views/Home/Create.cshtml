@model FileDemo.Models.File

<div>
    <h1>Create new file</h1>
    <form method="post" enctype="multipart/form-data" asp-action="Create">
        <div class="form-group row">
            <label asp-for="@Model.Image" class="col-4"></label>
            <input type="file" name="files" class="form-control col-8">
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input type="submit" class="btn btn-success w-100" value="Create" />
            </div>
            <div class="col-6">
                <a asp-action="Index" class="btn btn-dark w-100">Back</a>
            </div>
        </div>
    </form>
</div>
